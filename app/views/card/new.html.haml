
%body
  .user__header
    %header.user__header__nav
      %h1
        =link_to"/" do
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3296506464", alt: 'mercari', height: '65', width: '80'
      %nav.progress
        %ul.progress-bar
          %li.progress_li_gray
            会員情報
            .progress_status_red
            .progress-status_bar_1_red
          %li.progress_li_gray
            電話番号認証
            .progress_status_red
            .progress-status_bar_2_red
          %li.progress_li_gray
            お届け先住所入力
            .progress_status_red
            .progress-status_bar_3_red
          %li.progress_li_red
            支払い方法
            .progress_status_red
            .progress-status_bar_4_gray
          %li.progress_li_gray
            完了
            .progress_status_gray

  .user__main
    .user__main__container
      %h2.user__main__registration 支払い方法
      .user__main__form
        .user__main__form__container
          = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
            .user__field
              %label.user__field__label カード番号
              %span.user__field__span 必須
              %br/
              = text_field_tag "number", "", class: "user__text__field__step3", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              -# %input.user__text__field__step3{placeholder: "半角数字のみ"}
            .user__field
              %label.user__field__label 有効期限
              %span.user__field__span 必須
              %br/
              -# %select.user__text__field__step4{name: "day"}>
              %select.user__text__field__step4#exp_month{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %h4.user__field__step4__h4 月

            .user__field__step4
              -# %select.user__text__field__step4{name: "year"}>
              %select.user__text__field__step4#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %h4.user__field__step4__h4 年

            .user__field__security__cord
              %label.user__field__label セキュリティコード
              %span.user__field__span 必須
              %br/
              -# %input.user__text__field__aaa{placeholder: "カード背面4桁もしくは3桁の番号"}
              = text_field_tag "cvc", "", class: "user__text__field__aaa", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
              #card_token
              = submit_tag "追加する", id: "token_submit" , class:"user__step4__submit__button"
  = render partial: 'main/footter'
