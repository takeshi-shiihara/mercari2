
%link{href: "https://use.fontawesome.com/releases/v5.6.1/css/all.css", rel: "stylesheet"}
.item__content
  %header.item__header
    %h1.item__header__name
    = link_to '#' do
      .item__main__image
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3296506464", alt: 'mercari',class: 'item__mercari'
  .item__main


  .buy-main
    .buy-main__content
      %h2.buy-main__content__header
        購入内容の確認
      .buy-main__content__item
        .buy-main__content__item__inner
          %h3.buy-main__content__item__image
            -# = image_tag("#{@item.images[0].main_image}", class: "image", height: '80px', width: '64px')
            = image_tag("#{@item.image.main_image}", class: "image", height: '80px', width: '64px')
          %p.buy-main__content__item__name
            #{@item.name}
          .buy-main__content__item__form
            %p.buy-main__content__item__price
              ¥#{@item.price}
              %span.buy-main__content__item__commission
                送料込み
            %ul.buy-main__content__item__point
              %li.buy-main__content__item__num
                %div.buy-main__content__item__num__form
                  ポイントはありません
            %ul.buy-main__content__item__pay
              %li.buy-main__content__item__pay__num
                .buy-main__content__item__you__pay
                  支払金額
                .buy-main__content__item__buy__num
                  ¥#{@item.price}
                  %span.item-num
            - if @default_card_information.blank?
              %p.buy-none 支払い方法の入力を完了してください。
              %div.buy-btn-none
                購入する
            - else
              = form_tag(action: :pay, method: :post) do
                %input{:name => "status", :placeholder => "status", :type => "hidden", :value => "1"}
                %button.buy-btn
                  購入する


      .buy-main__content__user__info
        .buy-main__content__user__inner
          %h3.buy-delibery-address
            配送先
          .buy-delibery-address__users
            -# %br #{current_user.addresses.city}
            -# %br #{@user.a}
            %br〒542-0076
            %br大阪府大阪市中央区難波５丁目１−６０
            %br User
          %p.buy-main__content__user__text
          = link_to  "#", class: 'buy-user-info-fix' do
            変更する
            %i.fas.fa-chevron-right

      .buy-main__content__pay__info
        .buy-main__content__user__inner
          %h3.buy-how-to-pay
            支払方法
          %br
          %p.buy-main__content__user__text
          .buy-main__content__user__card
            %p.buy-main__content__user__card__num
            //クレジットカード情報//
          - if @default_card_information.blank?
            %br /
          - else
            = "**** **** **** " + @default_card_information.last4
            %br
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
            %br
            = image_tag 'https://upload.wikimedia.org/wikipedia/commons/thumb/f/fa/American_Express_logo_%282018%29.svg/1200px-American_Express_logo_%282018%29.svg.png', alt: '', height: '22px', width: '22px', class: 'payment-card-image'
          = link_to  "/card/new_mypage", class: 'buy-user-info-fix' do
            変更する
            %i.fas.fa-chevron-right
            


  %footer.item__footer
    .item__footer__box
      %nav.item__footer__box__list
        %ul.text__clearfix
          %li.text__clearfix__item
            = link_to 'プライバシーポリシー',"https://www.mercari.com/jp/privacy/", class:"head_up"
          %li.text__clearfix__item
            = link_to 'メルカリ利用規約',"https://www.mercari.com/jp/tos/", class:"head_up"
          %li.text__clearfix__item
            = link_to '特定商取引に関する表記',"https://www.mercari.com/jp/tokutei/", class:"head_up"
        = link_to 'https://www.mercari.com/jp/' do
          = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3296506464', alt: 'mercari', height: '65', width: '80', class: 'single-footer-logo'
      %p
        %small.item__footer__logo © 2019 Mercari